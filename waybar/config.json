{
    "layer": "top",
    "position": "top",
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 30, // Altura da sua barra, pode ajustar

    "modules-left": [
        "cpu",
        "memory",
        "disk"
    ],
    "modules-center": [
        "sway/workspaces"
    ],
    "modules-right": [
        "network",
        "pulseaudio",
        "battery",
        "backlight",
        "clock",
        "custom/calendar",
        "custom/exit"
    ],

    // M√≥dulos da Esquerda: CPU, RAM, Disco
    "cpu": {
        "format": "CPU: {usage}%",
        "tooltip": true,
        "interval": 1,
        "format-alt": "CPU: {usage}% | Load: {avg_load0}",
        "tooltip-format": "CPU: {usage}% | Carga M√©dia: {avg_load0}, {avg_load1}, {avg_load2}"
    },
    "memory": {
        "format": "RAM: {percentage}%",
        "tooltip": true,
        "interval": 1,
        "format-alt": "RAM: {used}G/{total}G ({percentage}%)",
        "tooltip-format": "RAM Usada: {used}G ({percentage}%)"
    },
    "disk": {
        "format": "Disco: {percentage_used}%",
        "path": "/", // Monitora a parti√ß√£o raiz
        "tooltip": true,
        "interval": 30,
        "format-alt": "Disco: {used}G/{total}G ({percentage_used}%)",
        "tooltip-format": "Disco: {used}G ({percentage_used}%) em {path}"
    },

    // M√≥dulo do Centro: Workspaces do Sway
    "sway/workspaces": {
        "format": "{name}",
        "all-outputs": true,
        "format-config": { // Nomes mais visuais para os workspaces
            "1": { "text": "‰∏Ä" },
            "2": { "text": "‰∫å" },
            "3": { "text": "‰∏â" },
            "4": { "text": "Âõõ" },
            "5": { "text": "‰∫î" },
            "6": { "text": "ÂÖ≠" },
            "7": { "text": "‰∏É" },
            "8": { "text": "ÂÖ´" },
            "9": { "text": "‰πù" },
            "10": { "text": "ÂçÅ" }
        },
        "on-click": "activate_workspace",
        "persistent_workspaces": {
             "*": 10 // Garante 10 workspaces vis√≠veis em todas as telas
        }
    },

    // M√≥dulos da Direita: Rede, √Åudio, Bateria, Brilho, Rel√≥gio, Calend√°rio, Sair
    "network": {
        "format-wifi": "Ôá´ {essid} ({signalStrength}%)",
        "format-ethernet": "Û∞àÄ {ipaddr}/{ifname}",
        "format-disconnected": "Û∞§Æ Desconectado",
        "tooltip-format-wifi": "{essid} ({signalStrength}%) | ÔÄô {bandwidthDownBytes} ÔÇì {bandwidthUpBytes}",
        "tooltip-format-ethernet": "{ifname} | ÔÄô {bandwidthDownBytes} ÔÇì {bandwidthUpBytes}",
        "interval": 5
    },
    "pulseaudio": {
        "format": "üîä {volume}% {format_source}",
        "format-muted": "üîá Silenciado",
        "format-source": "üé§ {volume}%",
        "format-source-muted": "üéôÔ∏è Silenciado",
        "tooltip": true,
        "scroll-step": 1,
        "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
        "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +5%",
        "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -5%"
    },
    "battery": {
        "format": "{icon} {percentage}%",
        "format-charging": "ÂÖÖÈõª {percentage}%",
        "format-plugged": "Ôá¶ {percentage}%",
        "format-alt": "{icon} {time}",
        "format-full": "Ôá¶ Completa",
        "format-null": "N/A",
        "interval": 60,
        "states": {
            "good": 90,
            "warning": 30,
            "critical": 15
        },
        "icons": {
            "good": "ÔâÄ",
            "warning": "ÔâÇ",
            "critical": "ÔâÉ",
            "full": "ÔâÄ"
        }
    },
    "backlight": {
        "format": "ÔÜÖ {percent}%",
        "tooltip": true,
        "interval": 1,
        "on-scroll-up": "brightnessctl set +5%",
        "on-scroll-down": "brightnessctl set 5%-"
    },
    "clock": {
        "format": "{:ÔÄó %H:%M}", // Hora e minuto com √≠cone de rel√≥gio
        "format-alt": "{:ÔÅ≥ %d/%m/%Y %H:%M}", // Alterna para data completa ao clicar
        "tooltip-format": "<big>{:%A, %d de %B de %Y}</big>" // Data completa no tooltip
    },
    "custom/calendar": {
        "format": "ÔÑ≥", // √çcone de calend√°rio
        "tooltip": true,
        "tooltip-format": "{:ÔÅ≥ %A, %d de %B de %Y}\n{custom_calendar_tooltip}", // Data e o `cal` no tooltip
        "exec": "cal", // Executa o comando `cal` para o conte√∫do do tooltip
        "on-click": "xdg-open 'https://calendar.google.com'", // Exemplo: abre o Google Calendar no navegador
        "interval": 3600 // Atualiza a cada hora (o conte√∫do do tooltip √© atualizado no clique)
    },
    "custom/exit": {
        "format": "‚èª", // √çcone de power
        "tooltip": "Desligar / Reiniciar / Sair",
        "on-click": "exec swaynag -t warning -m 'O que deseja fazer?' -b 'Sair' 'swaymsg exit' -b 'Reiniciar' 'systemctl reboot' -b 'Desligar' 'systemctl poweroff'"
    }
}
